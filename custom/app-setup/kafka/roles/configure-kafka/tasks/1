---
- name: "[ Namespace ] create kafka Namespace"
  community.kubernetes.k8s:
              name: kafka
              api_version: v1
              kind: Namespace
              state: present
    
- name: Creating an empty file
       file:
        path: kubectl-kudo
        state: touch

- name: downloading kubectl-kudo
       get_url:
                url: https://github.com/kudobuilder/kudo/releases/download/v{{ VERSION }}/kubectl-kudo_{{ VERSION }}_{{ OS}}_{{ BIT_VERSION }}
                dest: kubectl-kudo
                force: yes
                mode: '755'
  register: kudoresult
- debug:
             var: kudoresult.status_code  

- name: Moving the kubectl-kudo
  command: mv   kubectl-kudo  /usr/local/bin/kubectl-kudo
      
- name: Initialising the kubectl kudo
  command: "kubectl kudo init"
- name: Installing zookeeper
  command: "kubectl kudo install zookeeper --instance=zookeeper-instance -n kafka"
  register: zooOut
  changed_when: false
  failed_when: "zooOut.rc != 0 and zooOut.stdout_lines[0] != 'operatorversion.kudo.dev/v1beta1/zookeeper-0.3.1 already installed' " 
- debug:
             var: zooOut.stdout_lines[0]

- name: Installing kafka
  command: "kubectl kudo install kafka --instance=kafka -p ADD_SERVICE_MONITOR=true -n kafka"
  register: kafkaOut
  changed_when: false
  failed_when: "kafkaOut.rc != 0 and kafkaOut.stdout_lines[0] != 'operatorversion.kudo.dev/v1beta1/kafka-1.3.1 already installed' "
  - debug:
             var: kafkaOut.stdout_lines

- name: Wait till the  obect of zookeeper is not crerated
  community.kubernetes.k8s_info:
        api_version: apps/v1
        kind: StatefulSet
        wait: yes
        name: zookeeper-instance-zookeeper
        namespace: kafka
        wait_sleep: 2
        wait_timeout: 100
  register: Zoowaitlog
- debug:
             var: Zoowaitlog.resources[0].status.currentReplicas

- name: Wait till object of kafka is not created
  community.kubernetes.k8s_info:
        api_version: apps/v1
        kind: StatefulSet
        wait: yes
        name: kafka-kafka
        namespace: kafka
        wait_sleep: 2
        wait_timeout: 200
  register: Kafkawaitlog
- debug:
             var: Kafkawaitlog.resources[0].status.currentReplicas



